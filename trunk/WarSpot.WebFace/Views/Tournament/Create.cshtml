@model WarSpot.WebFace.Models.Tournament

@{
  ViewBag.Title = "Новый турнир";
}

<h2>Создание турнира</h2>
@using(Html.BeginForm())
{
<div>
	<div class="editor-label">@Html.LabelFor(m => m.TournamentName)</div>
	<div class="editor-field">@Html.EditorFor(m => m.TournamentName)</div>
	<div class="editor-label">@Html.LabelFor(m => m.Description)</div>
	<div class="editor-field">@Html.EditorFor(m => m.Description)</div>
	<div class="editor-label">@Html.LabelFor(m => m.StartTime)</div>
	<div class="editor-field">@Html.EditorFor(m => m.StartTime)</div>
	<div class="editor-label">@Html.LabelFor(m => m.MaxPlayers)</div>
	<div class="editor-field">@Html.EditorFor(m => m.MaxPlayers)</div>
</div>
}
